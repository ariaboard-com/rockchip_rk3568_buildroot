@@ -102,6 +102,7 @@ private:
         ~Toplevel();
 
         void applyConfigure();
+        void updatePosition();
 
         void zxdg_toplevel_v6_configure(int32_t width, int32_t height, wl_array *states) override;
         void zxdg_toplevel_v6_close() override;
@@ -112,6 +113,7 @@ private:
             bool fullscreen;
         } m_configureState;
         QSize m_normalSize;
+        QPoint m_position;
 
         QWaylandXdgSurfaceV6 *m_xdgSurface;
     };
